@model ProductUpdateViewModel

<section>
	<form asp-controller="Product" asp-action="Update">
		<section>
			<label asp-for="Product.Name"></label>
			<input asp-for="Product.Name" />
			<span asp-validation-for="Product.Name" style="color:red" />
		</section>
		<section>
			<label asp-for="Product.Description"></label>
			<input asp-for="Product.Description" />
			<span asp-validation-for="Product.Description" style="color:red" />
		</section>
		<section>
			<label asp-for="Product.Price"></label>
			<input asp-for="Product.Price" />
			<span asp-validation-for="Product.Price" style="color:red" />

		</section>
		<section>
			<label asp-for="Product.Discount"></label>
			<input asp-for="Product.Discount" />
			<span asp-validation-for="Product.Discount" style="color:red" />
		</section>
		<section>
			<button type="submit">Submit</button>
		</section>
	</form>
</section>